@article{wang_using_2018,
	title = {Using the {Atmospheric} {Radiation} {Measurement} ({ARM}) {Datasets} to {Evaluate} {Climate} {Models} in {Simulating} {Diurnal} and {Seasonal} {Variations} of {Tropical} {Clouds}},

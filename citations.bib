@article{yang_mechanisms_2006,
author = { Song  Yang  and  Eric A.  Smith },
title = {Mechanisms for Diurnal Variability of Global Tropical Rainfall Observed from TRMM},
journal = {Journal of Climate},
volume = {19},
number = {20},
pages = {5190-5226},
year = {2006},
doi = {10.1175/JCLI3883.1},

